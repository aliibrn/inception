[server]

[mysqld]
user                    = mysql
pid-file                = /run/mysqld/mysqld.pid
[mysql]
socket                  = /run/mysqld/mysqld.sock
[mysqladmin]
socket                  = /run/mysqld/mysqld.sock
port                    = 3306

bin-address             = 0.0.0.0
# Directories
basedir                 = /usr
datadir                 = /var/lib/mysql
tmpdir                  = /tmp

# Logging
log_error               = /var/log/mysql/error.log

# Character set (important for Wordpress/UTF-8 support)
character-set-server    = utf8mb4
collation-server        = utf8mb4_general_ci

[embedded]

[mariadb]

[mariadb-10.11]
